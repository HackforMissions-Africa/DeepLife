<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/entertainmentdrawerLayout">
    
    <FrameLayout 
        android:id="@+id/answerFrame"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        >
 <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/answerController"
    tools:context="."
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
  <android.support.v4.view.PagerTitleStrip
        android:id="@+id/entertainmentpager_title_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/bg_logins"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="#fff" />       
    </android.support.v4.view.ViewPager>    

    </FrameLayout>
    
    <include layout="@layout/sidenav" />

</android.support.v4.widget.DrawerLayout>

